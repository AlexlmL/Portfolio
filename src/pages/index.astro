    email: 'alexcantsed@hotmail.com',
    phone: '+51 965 255 438',
    linkedin: 'https://www.linkedin.com/in/alexander-alberto-cantoral-sedamano-9b756416b/',
    github: 'https://github.com/AlexlmL'
}
const projects = [
    {
        title: 'PC Master',
        year: '2024',
        course: 'Web Applications',
        role: 'Frontend & Backend Developer',
        tech: ['Vue.js', 'C# .NET'],
        description:
            'Built a web system using Vue.js and C# .NET. Contributed to dynamic interfaces, quality testing, functional documentation, and DevOps support, improving user experience and product stability.',
        github: 'https://github.com/SI730-WS51-PC-MASTER'
    },
    {
        title: 'EcoMovil',
        year: '2025',
        course: 'Fundamentos de Arquitectura de Software',
        role: 'Frontend Developer',
        tech: ['Angular', 'TypeScript'],
        description:
            'Development of the frontend using Angular, focused on a solid and well-structured user interface. Participated in technical documentation and achieved one of my best academic deliverables in terms of visual and technical quality.',
